  <div class="container">
        <h1 class="logo large">BOOKMARKER</h1>
        <form class="form" action="/users/sign_in" method="post">
            <div class="forceColor"></div>
            <div class="form_row_email">
                <div class="spanColor" style="height:41px;"></div>
                <input type="text" class="input" name="user[username]" placeholder="Username">
                <input type="email" class="input" name="user[email]" placeholder="Email">
                <input type="password" class="input" name="user[password]" placeholder="Password">
                <input type="password" class="input" name="user[password_confirmation]" placeholder="Password Confirmation">
            </div>
            <button class="sign_up" id="submit"> Sign up</button>
        </form>
    </div>